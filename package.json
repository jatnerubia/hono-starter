{
  "name": "hono-starter",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky || true",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down -v",
    "docker:prod:up": "docker-compose up --build -d",
    "docker:prod:down": "docker-compose down",
    "test": "vitest",
    "build": "rimraf ./dist && tsc --project tsconfig.build.json && tsc-alias",
    "start": "node dist/src/index.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.0",
    "@scalar/hono-api-reference": "^0.5.159",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.35.3",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.7",
    "hono-pino": "^0.4.0",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-perfectionist": "^4.1.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.8"
  }
}
